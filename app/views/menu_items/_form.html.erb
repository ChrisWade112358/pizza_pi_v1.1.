<% if @menu_item.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@menu_item.errors.count, "error") %>
      prohibited this article from being saved:
    </h2>
 
    <ul>
    <% @menu_item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>





<%= form_for @menu_item do |form| %>
    Name: <%= form.text_field :name, required: true %><br>
    Price: <%= form.text_field :price, required: true %><br>
    <div class="form-group">
    category: <%= form.select(:category, MenuItem::CATEGORY) %>
    </div>
    Description: <%= form.text_area :description %><br>
    
    <%= form.submit %>
<% end %>